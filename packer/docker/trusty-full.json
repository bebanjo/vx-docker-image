{
  "builders": [
    {
      "type":        "docker",
      "image":       "vexor/trusty:1.0.0",
      "pull":        true,
      "export_path": "trusty-full.tar"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "docker/trusty-full/playbooks",
      "destination": "/tmp/provision"
    },
    {
      "type":   "shell",
      "script": "docker/trusty-full/base.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "vexor/trusty-full",
        "tag": "1.0.2"
      }
    ]
  ]
}

