{
  "builders": [
    {
      "type":        "docker",
      "image":       "pacoguzman/vexor-precise:latest",
      "pull":        true,
      "export_path": "precise-bebanjo.tar"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "docker/precise-full/playbooks",
      "destination": "/tmp/provision"
    },
    {
      "type":   "shell",
      "script": "docker/precise-full/base.sh"
    }
  ]
}

