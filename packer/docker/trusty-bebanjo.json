{
  "builders": [
    {
      "type":        "docker",
      "image":       "dmexe/vexor-trusty:latest",
      "pull":        true,
      "export_path": "trusty-bebanjo.tar"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "docker/trusty-bebanjo/playbooks",
      "destination": "/tmp/provision"
    },
    {
      "type":   "shell",
      "script": "docker/trusty-bebanjo/base.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "pacoguzman/vexor-trusty-bebanjo",
        "tag": "latest"
      }
    ]
  ]
}

